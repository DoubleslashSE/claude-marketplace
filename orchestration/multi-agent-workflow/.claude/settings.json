{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/safety.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/audit.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/stop.py"
          }
        ]
      }
    ]
  },
  "workflow": {
    "maxIterations": 100,
    "completionMarkers": [
      "WORKFLOW_COMPLETE",
      "## WORKFLOW_COMPLETE"
    ],
    "clarifyingQuestions": {
      "preAnalysis": true,
      "prePlan": true
    },
    "longRunning": {
      "enabled": true,
      "progressReportIntervalMinutes": 30,
      "checkpointIntervalStories": 3
    }
  }
}
